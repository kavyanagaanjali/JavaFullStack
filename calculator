<body>
<input type="number"id="num1"placeholder="enter first number">
<input type="number"id="num2"placeholder="enter second number"><br>
 <button class="btn btn-primary" onclick="add()">Add</button>
 <button class="btn btn-primary" onclick="sub()">Sub</button>
 <button class="btn btn-primary" onclick="mul()">Mul</button>
 <button class="btn btn-primary" onclick="div()">div</button>
 <button class="btn btn-primary" onclick="mod()">mod</button>
<h1 id="h"></h1>
</body>
 <script>
    function add()
{
   a=Number(document.getElementById("num1").value);
     b=Number(document.getElementById("num2").value);
    document.getElementById("h").innerHTML=a+b;
}
 function sub()
{
   a=Number(document.getElementById("num1").value);
     b=Number(document.getElementById("num2").value);
    document.getElementById("h").innerHTML=a-b;
}
 function mul()
{
   a=Number(document.getElementById("num1").value);
     b=Number(document.getElementById("num2").value);
    document.getElementById("h").innerHTML=a*b;
}
 function div()
{
   a=Number(document.getElementById("num1").value);
     b=Number(document.getElementById("num2").value);
    document.getElementById("h").innerHTML=a/b;
}
 function mod()
{
   a=Number(document.getElementById("num1").value);
     b=Number(document.getElementById("num2").value);
    document.getElementById("h").innerHTML=a%b;
}

 
 </script>
